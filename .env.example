###################################################
# TODO APP - Environment Variables Template
# Copy this file to .env and fill in your values
###################################################

NODE_ENV=development
APP_NAME=todo-app
BACKEND_PORT=3000
CLIENT_PORT=5173
PROXY_PORT=80

# Database Configuration
DB_TYPE=mysql
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DB=todos
MYSQL_USER=root
MYSQL_PASSWORD=changeme

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-username
IMAGE_NAME=todo-app
IMAGE_TAG=latest

# Jenkins Configuration
JENKINS_DOCKER_CREDENTIALS_ID=dockerhub-credentials
JENKINS_BUILD_RETENTION=10
JENKINS_BUILD_TIMEOUT=30

# PHPMyAdmin
PHPMYADMIN_HOST=db.localhost
PMA_ARBITRARY=0

# Security
RATE_LIMIT=100

# Logging
LOG_LEVEL=info
DEBUG=false

# CORS
CORS_ORIGINS=http://localhost,http://localhost:5173,http://localhost:80
CORS_CREDENTIALS=true
